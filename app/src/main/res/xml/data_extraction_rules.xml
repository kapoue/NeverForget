<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Inclure la base de données dans la sauvegarde cloud -->
        <include domain="database" path="neverforget_database" />
        
        <!-- Inclure les préférences partagées -->
        <include domain="sharedpref" path="." />
    </cloud-backup>
    
    <device-transfer>
        <!-- Inclure toutes les données lors du transfert d'appareil -->
        <include domain="database" path="neverforget_database" />
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>